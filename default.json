{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["on friday"],
  "timezone": "Asia/Tokyo",
  "ignorePaths": ["**/node_modules/**"],
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": true,
    "groupName": "Minor updates",
    "stabilityDays": 7,
    "prCreation": "not-pending"
  },
  "patch": {
    "automerge": true,
    "groupName": "Patch updates",
    "stabilityDays": 7,
    "prCreation": "not-pending"
  }
}
